package org.nabucco.framework.setup.facade.datatype.agent;

import org.nabucco.framework.base.facade.datatype.Number;


@Author         Nicolas Moser
@Company        PRODYNA AG
@Date           2011-06-06
@Version        1
@Description	A chronological trigger.
public Datatype CronTrigger {

	@Description	The year.
	private Basetype Number[0..1] year;

	@Description	The day of the week (1-7, sunday = 1).
	private Basetype Number[0..1] weekday;
	
	@Description	The month (1-12).
	private Basetype Number[0..1] month;
	
	@Description	The day of the month (1-31).
	private Basetype Number[0..1] day;
	
	@Description	The hour of the day (0-23).
	private Basetype Number[0..1] hour;
	
	@Description	The minute of the hour (0-59).
	private Basetype Number[0..1] minute;
	
}

